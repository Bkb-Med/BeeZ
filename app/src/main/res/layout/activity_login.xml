<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dashboard">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/L1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <TextView
                android:id="@+id/viewlog"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_below="@+id/viewlog"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your login and password"
                android:textSize="25sp"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/imgView_userIcon"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:background="@color/honey2"
                android:padding="8dp"

                android:tint="@color/white" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/imgView_userIcon"
                android:layout_alignParentTop="true"
                android:background="@color/greyhoney"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:paddingLeft="20dp"
                android:textSize="25sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">
            <ImageView
                android:id="@+id/imgView_userIcon2"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:background="@color/honey2"
                android:padding="8dp"
                android:tint="@color/white" />
            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/imgView_userIcon2"
                android:layout_alignParentTop="true"
                android:background="@color/greyhoney"
                android:inputType="textPassword"

                android:hint="Password"

                android:paddingLeft="20dp"
                android:textSize="25sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp">
            <Button
                android:id="@+id/loginbutton"
                android:layout_width="173dp"
                android:layout_height="47dp"
                android:background="@drawable/shadedbutton"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                />

        </RelativeLayout>


    </LinearLayout>

    </LinearLayout>
</LinearLayout>