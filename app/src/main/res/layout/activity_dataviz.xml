<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkblue"
                android:gravity="left"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/dataviz" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Data visualisation"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <Spinner
                        android:id="@+id/vizspinner"
                        android:layout_marginLeft="18dp"
                        android:layout_width="190dp"
                        android:layout_height="35dp"
                        android:backgroundTint="@color/greyhoney"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnlayout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/linearLayout1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-60dp"
                android:padding="5dp"
                android:background="@drawable/whitecircle"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/vizback"
                    android:layout_gravity="center"
                    app:fabCustomSize="30dp"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkblue"
                    app:borderWidth="0dp"
                    android:src="@drawable/ic_arrow_back"
                    android:elevation="10dp"
                    app:fabSize="normal"
                    >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnsynclayout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/linearLayout1"
                android:layout_toLeftOf="@+id/btnlayout"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-60dp"
                android:padding="5dp"
                android:background="@drawable/whitecircle"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/SyncDBviz"
                    android:layout_gravity="center"
                    app:fabCustomSize="30dp"
                    android:foregroundGravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkblue"
                    app:borderWidth="0dp"
                    android:src="@drawable/ic_sync_db"
                    android:elevation="10dp"
                    app:fabSize="normal"
                    >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>
            </LinearLayout>


            <ProgressBar
                android:visibility="gone"
                android:layout_below="@+id/linearLayout1"
                android:id="@+id/mainProgressBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:indeterminateTint="@color/honey1" />
            <RelativeLayout
                android:id="@+id/parentlaoutlist"
                android:layout_below="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:id="@+id/combinedchart"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>


